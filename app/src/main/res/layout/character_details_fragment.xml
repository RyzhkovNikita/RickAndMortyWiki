<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="CDviewModel"
                  type="com.aura.project.rickandmortywiki.CharacterDetailsViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_background"
            tools:context=".CharacterDetailsFragment">
        <ImageView
                android:layout_width="256dp"
                android:layout_height="256dp"
                tools:src="@tools:sample/avatars"
                android:id="@+id/details_avatar_image"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:elevation="1dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/details_name_text"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/dead_stamp"
                android:id="@+id/details_dead_image"
                android:layout_marginStart="184dp"
                app:layout_constraintStart_toStartOf="@+id/details_avatar_image"
                android:layout_marginBottom="184dp"
                app:layout_constraintBottom_toBottomOf="@+id/details_avatar_image"
                android:labelFor="@id/details_avatar_image"
                android:elevation="1dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/details_name_text"
                app:layout_constraintTop_toBottomOf="@+id/details_avatar_image"
                android:text="@{CDviewModel.name}"
                tools:text="Rick Sanchez"
                android:textSize="32sp"
                android:textAlignment="center"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:drawablePadding="2dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/details_origin_title"/>
        <TextView
                android:text="@string/origin"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/details_origin_title"
                app:layout_constraintTop_toBottomOf="@+id/details_name_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/details_origin"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:text="@string/location"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/details_location_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/details_origin_title"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>
        <TextView
                tools:text="Ricks Citadel"
                style="@style/ClickableTextView"
                android:textSize="20sp"
                android:text="@{@string/underlined_text(CDviewModel.origin)}"
                android:layout_width="0dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:id="@+id/details_origin"
                app:layout_constraintTop_toBottomOf="@+id/details_origin_title"
                app:layout_constraintBottom_toTopOf="@+id/horizontal_guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{()->CDviewModel.originClicked()}"/>
        <TextView
                tools:text="Earth"
                style="@style/ClickableTextView"
                android:text="@{@string/underlined_text(CDviewModel.location)}"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/details_location"
                app:layout_constraintTop_toTopOf="@+id/details_origin"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                android:onClick="@{()->CDviewModel.locationClicked()}"/>
        <TextView
                android:text="@string/episodes"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/episodes"
                android:id="@+id/details_episodes_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/horizontal_guideline"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:id="@+id/episodes"
                tools:itemCount="100"
                tools:listitem="@layout/episode_item"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/details_episodes_title"
                app:layout_constraintHorizontal_bias="0.5"
                android:layout_marginBottom="8dp"/>
        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"/>
        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/horizontal_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.75"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>