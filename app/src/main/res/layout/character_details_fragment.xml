<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".CharacterDetailsFragment">
        <ImageView
                android:layout_width="256dp"
                android:layout_height="256dp"
                tools:src="@tools:sample/avatars"
                android:id="@+id/details_avatar_image"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:elevation="1dp" app:layout_constraintTop_toBottomOf="@+id/details_dead_image"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/details_name_text"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/dead_stamp"
                android:id="@+id/details_dead_image"
                android:layout_marginStart="184dp"
                app:layout_constraintStart_toStartOf="@+id/details_avatar_image"
                android:layout_marginBottom="184dp"
                app:layout_constraintBottom_toBottomOf="@+id/details_avatar_image"
                android:labelFor="@id/details_avatar_image"
                android:elevation="1dp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/details_name_text"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/details_avatar_image"
                tools:text="Rick Sanchez"
                android:textSize="32sp"
                android:textAlignment="center"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:drawablePadding="20dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/details_origin_title"/>
        <TextView
                android:text="@string/origin"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/details_origin_title"
                app:layout_constraintTop_toBottomOf="@+id/details_name_text"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@+id/details_location_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/details_origin"/>
        <TextView
                android:text="@string/location"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/details_location_title"
                app:layout_constraintStart_toEndOf="@+id/details_origin_title"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/details_origin_title"/>
        <TextView
                tools:text="Ricks Citadel"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/details_origin"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@+id/details_origin_title"
                app:layout_constraintStart_toStartOf="@+id/details_origin_title"
                app:layout_constraintEnd_toEndOf="@+id/details_origin_title"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/details_episodes_title"/>
        <TextView
                tools:text="Earth"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/details_location"
                app:layout_constraintTop_toTopOf="@+id/details_origin"
                app:layout_constraintStart_toStartOf="@+id/details_location_title"
                app:layout_constraintEnd_toEndOf="@+id/details_location_title"/>
        <TextView
                android:text="@string/episodes"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/details_origin"
                app:layout_constraintBottom_toTopOf="@id/episodes"
                android:id="@+id/details_episodes_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:id="@+id/episodes"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/details_episodes_title"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginBottom="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>