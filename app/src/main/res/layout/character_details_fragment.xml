<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="viewModel"
                  type="com.aura.project.rickandmortywiki.details_character.CharacterDetailsViewModel"/>
    </data>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ProgressBar android:id="@+id/progress_bar"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:visibility="visible"
                     TFvisibility="@{viewModel.loading}"
        />

        <include layout="@layout/error_layout"
                 android:id="@+id/error"
                 android:layout_gravity="center"
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:visibility="gone"
                 tools:visibility="visible"
                 TFvisibility="@{viewModel.error}"/>


        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="72dp"
                    tools:context=".details_character.CharacterDetailsFragment">

                <ImageView
                        android:layout_width="256dp"
                        android:layout_height="256dp"
                        tools:src="@tools:sample/avatars"
                        android:id="@+id/details_avatar_image"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        android:elevation="1dp"
                        app:layout_constraintHorizontal_bias="0.5"
                        android:layout_marginTop="56dp"
                        app:imageURL="@{viewModel.image}"
                        app:layout_constraintTop_toTopOf="parent"/>
                <ImageView
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:rotation="30"
                        android:background="@color/light_background"
                        app:srcCompat="@drawable/dead_stamp"
                        android:id="@+id/details_dead_image"
                        android:layout_marginStart="152dp"
                        app:layout_constraintStart_toStartOf="@+id/details_avatar_image"
                        android:layout_marginBottom="216dp"
                        app:layout_constraintBottom_toBottomOf="@+id/details_avatar_image"
                        android:labelFor="@id/details_avatar_image"
                        android:elevation="1dp"
                        android:visibility="gone"
                        tools:visibility="visible"
                        app:TFvisibility="@{viewModel.isDead}"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/details_name_text"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/details_avatar_image"
                        android:text="@{viewModel.name}"
                        tools:text="Rick Sanchez"
                        android:textSize="32sp"
                        android:textAlignment="center"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:drawablePadding="2dp"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:gender="@{viewModel.gender}"/>
                <TextView
                        android:text="@string/origin"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/details_origin_title"
                        app:layout_constraintTop_toBottomOf="@+id/details_name_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guideline"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>
                <TextView
                        android:text="@string/location"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/details_location_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBaseline_toBaselineOf="@+id/details_origin_title"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"/>
                <TextView
                        tools:text="Ricks Citadel"
                        style="@style/ClickableTextView"
                        android:textSize="20sp"
                        android:text="@{@string/underlined_text(viewModel.origin)}"
                        android:layout_width="0dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/details_origin"
                        app:layout_constraintTop_toBottomOf="@+id/details_origin_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/guideline"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{()->viewModel.originClicked()}"/>
                <TextView
                        tools:text="Earth"
                        style="@style/ClickableTextView"
                        android:text="@{@string/underlined_text(viewModel.location)}"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/details_location"
                        app:layout_constraintTop_toTopOf="@+id/details_origin"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        android:onClick="@{()->viewModel.locationClicked()}"/>
                <TextView
                        android:text="@string/episodes"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/details_episodes_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toBottomOf="@id/details_origin"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/episodes"
                        tools:itemCount="100"
                        tools:listitem="@layout/episode_item"
                        app:layout_constraintTop_toBottomOf="@+id/details_episodes_title"
                        app:layout_constraintHorizontal_bias="0.5"/>
                <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </FrameLayout>

</layout>