<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="characterData"
                  type="com.aura.project.rickandmortywiki.data.Character"/>
    </data>
    <ScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".CharacterDetailsFragment">
            <ImageView
                    android:layout_width="256dp"
                    android:layout_height="256dp"
                    tools:src="@tools:sample/avatars"
                    android:id="@+id/details_avatar_image"
                    android:layout_marginTop="40dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:elevation="1dp"/>
            <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:srcCompat="@drawable/dead_stamp"
                    android:id="@+id/details_dead_image"
                    android:layout_marginStart="184dp"
                    app:layout_constraintStart_toStartOf="@+id/details_avatar_image"
                    android:layout_marginBottom="184dp"
                    app:layout_constraintBottom_toBottomOf="@+id/details_avatar_image"
                    android:labelFor="@id/details_avatar_image"
                    android:elevation="1dp"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:id="@+id/details_name_text"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/details_avatar_image"
                    android:text="@={characterData.name}"
                    tools:text="Rick Sanchez"
                    android:textSize="32sp"
                    android:textAlignment="center"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:drawablePadding="20dp"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>